<Page x:Class="DruNet_WPF.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DruNet_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label>Wpisz adres IP i port</Label>
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBox Name="IpAddress" Width="100"/>
                <TextBox Name="Port" Width="50" Margin="10, 0, 0, 0"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Click="ClientStart_OnClick">Start Klienta</Button>
                <Button Click="ServerStart_OnClick" Margin="10, 0, 0, 0">Start Serwera</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
