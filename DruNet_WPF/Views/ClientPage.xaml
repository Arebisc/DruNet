<Page x:Class="DruNet_WPF.Views.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DruNet_WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ClientPage">

    <Grid>
        <StackPanel Orientation="Vertical" KeyDown="CommandLine_OnKeyDown">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock FontSize="22" FontFamily="Viner Hand ITC" FontWeight="Bold">Klient</TextBlock>
            </StackPanel>
            <StackPanel>
                <Label FontFamily="Snap ITC">Command Line</Label>
                <TextBox Name="CommandLineTb" Height="100"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label FontFamily="Snap ITC">Output</Label>
                <TextBlock Height="100" Name="OutputTb"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
